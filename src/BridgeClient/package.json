{
  "name": "@hardwarebridge/client",
  "version": "1.0.4",
  "description": "TypeScript client library for Hardware Bridge WebSocket service",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "rollup -c",
    "build:watch": "rollup -c -w",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "websocket",
    "hardware",
    "printer",
    "serial",
    "usb",
    "hid",
    "typescript",
    "rxjs"
  ],
  "author": "Azlam",
  "license": "MIT",
  "dependencies": {
    "rxjs": "^7.0.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/ws": "^8.18.0",
    "@typescript-eslint/eslint-plugin": "^8.21.0",
    "@typescript-eslint/parser": "^8.21.0",
    "eslint": "^9.18.0",
    "jest": "^30.0.0",
    "rimraf": "^6.0.1",
    "rollup": "^4.32.0",
    "rollup-plugin-dts": "^6.1.0",
    "ts-jest": "^29.1.1",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2",
    "typescript-eslint": "^8.53.1"
  },
  "peerDependencies": {
    "rxjs": "^7.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/me-azlam-kp/hardwarebridge.git",
    "directory": "src/BridgeClient"
  },
  "bugs": {
    "url": "https://github.com/me-azlam-kp/hardwarebridge/issues"
  },
  "homepage": "https://github.com/me-azlam-kp/hardwarebridge#readme"
}
